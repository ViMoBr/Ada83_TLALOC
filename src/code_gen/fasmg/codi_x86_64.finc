  if disp > -128 & disp < 127
    db 0x49, 0x8B, 0x40+lvl				; mov rax, qword ptr [r(8+lvl)+ofs8]   T:=ofs(FP)
    db disp
  else
    db 0x49, 0x8B, 0x80+lvl				; mov rax, qword ptr [r(8=lvl)+ofs32]
    dd disp
  end if
  db 0x88, 0x18					; mov byte ptr [rax], BL

end macro

